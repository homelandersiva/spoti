{
  "info": {
    "name": "Zoho Spotify Playback Controller",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Control Spotify playback through the Zoho backend."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "botSecret", "value": "BOT_SHARED_SECRET" },
    { "key": "userId", "value": "YOUR_SPOTIFY_USER_ID" },
    { "key": "trackUri", "value": "spotify:track:4cOdK2wGLETKBW3PvgPWqT" }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/login", "host": ["{{baseUrl}}"], "path": ["login"] }
      }
    },
    {
      "name": "Play",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"trackUri\": \"{{trackUri}}\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/spotify/play", "host": ["{{baseUrl}}"], "path": ["spotify", "play"] }
      }
    },
    {
      "name": "Pause",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\"\n}" },
        "url": { "raw": "{{baseUrl}}/spotify/pause", "host": ["{{baseUrl}}"], "path": ["spotify", "pause"] }
      }
    },
    {
      "name": "Next",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\"\n}" },
        "url": { "raw": "{{baseUrl}}/spotify/next", "host": ["{{baseUrl}}"], "path": ["spotify", "next"] }
      }
    },
    {
      "name": "Previous",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\"\n}" },
        "url": { "raw": "{{baseUrl}}/spotify/previous", "host": ["{{baseUrl}}"], "path": ["spotify", "previous"] }
      }
    },
    {
      "name": "Volume",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"volume_percent\": 65\n}"
        },
        "url": { "raw": "{{baseUrl}}/spotify/volume", "host": ["{{baseUrl}}"], "path": ["spotify", "volume"] }
      }
    },
    {
      "name": "Seek",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"position_ms\": 90000\n}"
        },
        "url": { "raw": "{{baseUrl}}/spotify/seek", "host": ["{{baseUrl}}"], "path": ["spotify", "seek"] }
      }
    },
    {
      "name": "Queue",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"trackUri\": \"{{trackUri}}\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/spotify/queue", "host": ["{{baseUrl}}"], "path": ["spotify", "queue"] }
      }
    },
    {
      "name": "Current",
      "request": {
        "method": "GET",
        "header": [
          { "key": "x-bot-secret", "value": "{{botSecret}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/spotify/current?userId={{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["spotify", "current"],
          "query": [
            { "key": "userId", "value": "{{userId}}" }
          ]
        }
      }
    }
  ]
}
